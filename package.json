{
  "name": "pkg_name",
  "version": "0.0.0",
  "description": "pkg_name - description",
  "type": "module",
  "sideEffects": false,
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MoaazKHASSAWNEH/NPM-Package"
  },
  "keywords": [
    "pkg_name"
  ],
  "author": "pkg_name_author",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "init:template": "node ./scripts/init-template.mjs",
    "build": "tsup && pnpm run types:cjs",
    "types:cjs": "node -e \"const fs=require('fs');fs.copyFileSync('dist/index.d.ts','dist/index.d.cts')\"",
    "dev": "tsup --watch",
    "typecheck": "tsc -p tsconfig.build.json --noEmit",
    "lint": "eslint .",
    "lint:package": "publint",
    "lint:deps": "knip",
    "lint:md": "markdownlint-cli2 \"**/*.md\" \"!**/node_modules/**\" \"!docs/api-generated/**\"",
    "format": "prettier . --check",
    "format:write": "prettier . --write",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "docs:dev": "vitepress dev docs",
    "docs:build": "pnpm run api:docs && vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "api:docs": "typedoc",
    "prepublishOnly": "pnpm run lint && pnpm run lint:package && pnpm run typecheck && pnpm run test && pnpm run build",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "^9.39.2",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.2.0",
    "husky": "^9.1.7",
    "knip": "^5.82.1",
    "lint-staged": "^16.2.7",
    "markdownlint-cli2": "^0.20.0",
    "prettier": "^3.8.1",
    "publint": "^0.3.17",
    "tsup": "^8.5.1",
    "typedoc": "^0.28.16",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vitepress": "^1.6.4",
    "vitest": "^4.0.18"
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "*.{ts,tsx,js,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,json,yml,yaml}": [
      "prettier --write"
    ]
  }
}
